void setup() {
  Serial.begin(115200);
  delay(10);
  pinMode(14, OUTPUT); // Set the LED pin as output

  Serial.println(F("Adafruit IO MQTTS (SSL/TLS)"));

  // Connect to WiFi access point.
  Serial.println(); Serial.println();
  Serial.print("Connecting to ");
  Serial.println(WLAN_SSID);

  delay(1000);

  WiFi.begin(WLAN_SSID, WLAN_PASS);
  delay(2000);

  // do this until established connection 
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println();

  //output device credentials IP and wifi device is on
  Serial.println("WiFi connected");
  Serial.println("IP address: "); Serial.println(WiFi.localIP());

  // Set Adafruit IO's root CA
  client.setCACert(adafruitio_root_ca);

  // Set up Adafruit IO MQTT subscriptions
  mqtt.subscribe(&onoff);
}

uint32_t x=0;

void loop() {
  // Ensure the connection to the MQTT server is alive (this will make the first
  // connection and automatically reconnect when disconnected).  See the MQTT_connect
  // function definition further below.
  MQTT_connect();
  //digitalWrite(ledPin, HIGH);

  Adafruit_MQTT_Subscribe *subscription;
  while ((subscription = mqtt.readSubscription(5000))) {
    if (subscription == &onoff) {
      Serial.print(F("Got: "));
      Serial.println((char *)onoff.lastread);
      if (!strcmp((char*) onoff.lastread, "ON")) {
        digitalWrite(14, HIGH);
      } else {
        digitalWrite(14, LOW);
      }
    }
  }
   // Read in value of light level from LDR
  lightLevel = analogRead(ldrPin);

  // Now we can publish the data to the feed
  Serial.print(F("Sending lightlevel -> "));
  Serial.print(lightLevel);
  if (! ldr.publish(lightLevel)) {
    Serial.println(F("[Failed]"));
  } else {
    Serial.println(F("[Success]"));
  }
  // wait a couple seconds to avoid rate limit
  delay(2000);

}

// Function to connect and reconnect as necessary to the MQTT server.
// Should be called in the loop function and it will take care if connecting.
void MQTT_connect() {
  int8_t ret;

  // Stop if already connected.
  if (mqtt.connected()) {
    return;
  }

  Serial.print("Connecting to MQTT... ");

  uint8_t retries = 3;
  while ((ret = mqtt.connect()) != 0) { // connect will return 0 for connected
       Serial.println(mqtt.connectErrorString(ret));
       Serial.println("Retrying MQTT connection in 5 seconds...");
       mqtt.disconnect();
       delay(5000);  // wait 5 seconds
       retries--;
       if (retries == 0) {
         // basically die and wait for WDT to reset me
         while (1);
       }
  }

  Serial.println("MQTT Connected!");
}
